{
  "name": "telegram-cli",
  "version": "0.1.0",
  "description": "Agent-friendly Telegram CLI client with full API support",
  "type": "module",
  "bin": {
    "tg": "./dist/tg"
  },
  "files": [
    "src/**/*.ts",
    "!src/__tests__/**",
    "!src/__e2e__/**",
    "scripts/postinstall.ts"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile dist/tg",
    "build:minify": "bun build ./src/index.ts --compile --minify --sourcemap --outfile dist/tg",
    "build:all": "bun run scripts/build-all.ts",
    "postinstall": "bun run scripts/postinstall.ts",
    "typecheck": "tsgo --noEmit",
    "typecheck:tsc": "tsc --noEmit",
    "test": "bun test src/__tests__",
    "test:e2e": "bun test src/__e2e__",
    "test:all": "bun test",
    "test:coverage": "bun test --coverage",
    "test:build": "bun run scripts/test-build.ts",
    "test:install": "bun run scripts/test-install.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "lefthook install"
  },
  "keywords": [
    "telegram",
    "cli",
    "mtproto",
    "telegram-api",
    "agent",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260201.1",
    "lefthook": "^2.0.16",
    "typescript": "^5"
  },
  "dependencies": {
    "@mtcute/bun": "^0.27.8",
    "citty": "^0.2.0",
    "qrcode-terminal": "^0.12.0"
  }
}
