{
  "name": "telegram-cli",
  "version": "0.1.0",
  "description": "Agent-friendly Telegram CLI client with full API support",
  "type": "module",
  "bin": {
    "tg": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome format --write src/"
  },
  "keywords": [
    "telegram",
    "cli",
    "mtproto",
    "telegram-api",
    "agent",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "@mtcute/bun": "^0.27.8",
    "citty": "^0.2.0",
    "qrcode-terminal": "^0.12.0"
  }
}
